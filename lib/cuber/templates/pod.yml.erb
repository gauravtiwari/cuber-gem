apiVersion: v1
kind: Pod
metadata:
  name: <%= @options[:pod] %>
  namespace: <%= @options[:app] %>
  labels:
    app.kubernetes.io/name: <%= @options[:app].to_s.to_json %>
    app.kubernetes.io/version: <%= @options[:release].to_s.to_json %>
    app.kubernetes.io/managed-by: cuber
spec:
  containers:
  - name: pod-proc
    image: <%= @options[:image] %>:<%= @options[:release] %>
    imagePullPolicy: Always
    command: ["sleep", "infinity"]
    resources:
      requests:
        memory: <%= @options[:image] || '128Mi' %>
        cpu: <%= @options[:cpu] || '250m' %>
    envFrom:
    - configMapRef:
        name: env
    - secretRef:
        name: app-secrets
  imagePullSecrets:
  - name: regcred
